<section class="info-display">
  <div class="book-image">
    <img src="<%= @book.thumbnail %>" alt="book-<%= @book.id %>">
  </div>
  <div class="book-info" id="primary-info">
    <h1 id="book-title"><%= @book.title %></h1>
    <% @book.authors.each do |author| %>
    <p>Author(s): </p><%= link_to author.name, author_path(author.id), class: 'navlink', id:'book-author' %>
    <% end %>
    <p>Page Count: <%= @book.pages %> </p>
    <p>Publication Date: <%= @book.year_published %></p>
    <%= link_to 'New Review', new_book_review_path(@book.id), class: 'navlink'%>
    <%= button_to "Delete Book", book_path(@book), method: :delete %>
  </div>
</section>
<% @book.reviews.each do |review| %>

<section class='info-display'>
  <div class="book-info">
    <h3 id="review-title"><%= review.title %> - <%= review.rating %> out of 5</h3>
    <p><%= review.description %></p>
    <p>User: <%= link_to review.user.name, user_path(review.user.id), class: 'navlink', id:'book-author' %>
</div>

<section class="statistics">
  <h1>Overall Rating: <%= @book.average_rating %></h1>
  <div id="top-reviews">
    <h3>Top Reviews:</h3>
    <% @book.top_reviews.each do |review| %>
      <p>Title: <%= review.title %></p>
      <p>Rating: <%= review.rating %></p>
      <p><%= review.user.name %></p>
    <% end %>
  </div>

  <div id="bottom-reviews">
    <h3>Bottom Reviews</h3>
      <% @book.bottom_reviews.each do |review| %>
      <p>Title: <%= review.title %></p>
      <p><%= review.rating %></p>
      <p><%= review.user.name %></p>
    <% end %>
  </div>
</section>
<% end %>
