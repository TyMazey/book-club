<img src="<%= @book.thumbnail %>" alt="book-<%= @book.id %>">

<h1><%= @book.title %></h1>

<% @book.authors.each do |author| %>
  <p><%= author.name %></p>
<% end %>

<p> <%= @book.pages %> </p>
<p><%= @book.year_published %></p>

<section class='reviews'>
<%= link_to 'New Review', new_book_review_path(@book.id) %>
<% @book.reviews.each do |review| %>
  <h3><%= review.title %></h3>
  <p><%= review.description %></p>
  <p><%= review.rating %></p>
  <p><%= review.user.name %></p>
<% end %>

<section class="statistics">
  <h1>Overall Rating: <%= @book.average_rating %></h1>
  <div id="top-reviews">
    <h3>Top Reviews:</h3>
    <% @book.top_reviews.each do |review| %>
      <p>Title: <%= review.title %></p>
      <p>Rating: <%= review.rating %></p>
      <p><%= review.user.name %></p>
    <% end %>
  </div>

  <div id="bottom-reviews">
    <h3>Bottom Reviews</h3>
      <% @book.bottom_reviews.each do |review| %>
      <p>Title: <%= review.title %></p>
      <p><%= review.rating %></p>
      <p><%= review.user.name %></p>
    <% end %>
  </div>
</section>
