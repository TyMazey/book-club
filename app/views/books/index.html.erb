
<div class="wrapper">
  <% @books.each do |book|%>
    <section class="info-display" id="book-<%=book.id%>">
      <img src="<%= book.thumbnail %>" alt="<%= book.title %>-cover">
      <h1><%= book.title %></h1>
      <% book.authors.each do |author| %>
      <p><%= author.name %></p>
      <% end %>
      <p><%= book.pages %></p>
      <p><%= book.year_published %></p>
    </section>
  <% end %>
</div>
