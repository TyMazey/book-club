<section class= "user"
<h1><%= @user.name %></h1>

</section>
<section class="reviews">
<%= link_to 'Newest Reviews', user_path(user: @user.id, sort: 'newest') %>
<%= link_to 'Oldest Reviews', user_path(user: @user.id, sort: 'oldest') %>
<%= @reviews.each do |review| %>
<section id="single-review">
  <p><%= review.title %></p>
  <p><%= review.rating %></p>
  <p><%= review.description %></p>
  <p> <a href="/books/<%= review.book.id %>"><%= review.book.title%></a></p>
  <img src="<%= review.book.thumbnail %>" alt="<%= review.book.title %>-cover">
  <p><%= review.created_at %></p>
</section>
<% end %>
</section>
